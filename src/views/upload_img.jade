extends layout

block content
  h1 #{title}
  .container
      .row
        form.form-signin(role="form",method="post",enctype='multipart/form-data',action='/s-upload-img/#{act_id}')
          .form-group
              label.col-sm-2.control-label(for="inputCover") 封面
              .col-sm-10
                  input#inputCoverFile.form-control(type="file", name="cover")
          .form-group
              .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type="submit") 提交